<!DOCTYPE html>
<html lang="en">

<%- include('../Common/head.ejs')%>


<body>

  <!-- ======= Header ======= -->
  <%- include('../Common/navbar.ejs')%>

  <!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <%- include('../Common/sidebar.ejs')%>

  <!-- End Sidebar-->

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Updata Blog Data</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/category/listing">Home</a></li>
          <li class="breadcrumb-item">Blog</li>
          <li class="breadcrumb-item active">Update</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row">
        <div class="col-lg-6">

          <div class="card" >
            <div class="card-body">
              <h5 class="card-title">Update Data</h5>

              <!-- Horizontal Form -->
              <form action="/category/updateListing" method="post" enctype="multipart/form-data">
                <input type="hidden" name="category_id" value="<%=singledata._id%>">

                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-3 col-form-label">Title</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" id="inputText" name="title" value="<%=singledata.title%>">
                  </div>
                </div>

                
                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-3 col-form-label">SubTitle</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" id="inputText" name="subtitle" value="<%=singledata.subtitle%>">
                  </div>
                </div>
            
                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-3 col-form-label">Content</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" id="inputText" name="content" value="<%=singledata.content%>">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-3 col-form-label">Image</label>
                  <div class="col-sm-9" >
                    <input type="file" class="form-control" style="color:red;" id="inputText"  name="image" accept="image/png, image/jpeg,image/jpg" value="<%=singledata.image%>" >
                  </div>
                  <!-- <input type="image" class="form-control" style="color:red;" id="inputText"  name="image" accept="image/png, image/jpeg,image/jpg" > -->
                </div>
                <img type="image" src="/<%=singledata.image %>" height="80px" width="80px" alt="editData" id="inputText"  >

              
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Update</button>
                </div>
              </form><!-- End Horizontal Form -->

            </div>
          </div>

          

        </div>

       
      </div>
    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <%- include('../Common/footer.ejs')%>